-- Services
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Criar a ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = playerGui
screenGui.Name = "CombatGUI"

-- Criar o botão principal
local button = Instance.new("TextButton")
button.Size = UDim2.new(0, 200, 0, 60) -- largura 200 para caber o emoji
button.Position = UDim2.new(0, 50, 0, 20) -- canto superior esquerdo + 50px para direita
button.Text = "⚔️ Combat"
button.BackgroundColor3 = Color3.fromRGB(200, 0, 0) -- vermelho mais avermelhado
button.TextColor3 = Color3.fromRGB(255, 255, 255)
button.Font = Enum.Font.SourceSansBold
button.TextScaled = true
button.BorderSizePixel = 0
button.Parent = screenGui

-- Bordas arredondadas
local uicorner = Instance.new("UICorner")
uicorner.CornerRadius = UDim.new(0, 15)
uicorner.Parent = button

-- Assinatura "Thi" embaixo do botão
local label = Instance.new("TextLabel")
label.Size = UDim2.new(0, 200, 0, 20)
label.Position = UDim2.new(0, 0, 1, 0) -- posição relativa abaixo do botão
label.Text = "Thi"
label.BackgroundTransparency = 1
label.TextColor3 = Color3.fromRGB(255, 255, 0)
label.Font = Enum.Font.SourceSansItalic
label.TextScaled = true
label.Parent = button

-- Função ao clicar
button.MouseButton1Click:Connect(function()
    local character = player.Character or player.CharacterAdded:Wait()
    local combat = character:WaitForChild("Combat")
    local remoteEvent = combat:WaitForChild("RemoteEvent")
    remoteEvent:FireServer()
end)

-- Esconder o botão quando o personagem morrer
player.CharacterAdded:Connect(function(character)
    local humanoid = character:WaitForChild("Humanoid")
    humanoid.Died:Connect(function()
        button.Visible = false
    end)
    -- Tornar o botão visível novamente quando o personagem reaparecer
    button.Visible = true
end)# CombatButton
