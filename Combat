local Players = game:GetService("Players")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Remove GUI antiga
if playerGui:FindFirstChild("CombatGUI") then
    playerGui.CombatGUI:Destroy()
end

-- Cria ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "CombatGUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

-- Cria botão Combat
local button = Instance.new("TextButton")
button.Size = UDim2.new(0, 190, 0, 65)
button.Position = UDim2.new(0, 203, 0, 10) -- ⬆ mais um pouquinho
button.Text = "Combat"
button.BackgroundColor3 = Color3.fromRGB(200, 0, 0)
button.TextColor3 = Color3.fromRGB(255, 255, 255)
button.Font = Enum.Font.SourceSansBold
button.TextScaled = true
button.BorderSizePixel = 0
button.Parent = screenGui

-- Arredondamento
local uicorner = Instance.new("UICorner")
uicorner.CornerRadius = UDim.new(0, 12)
uicorner.Parent = button

-- Label com nome
local label = Instance.new("TextLabel")
label.Size = UDim2.new(1, 0, 0, 18)
label.Position = UDim2.new(0, 0, 1, -18)
label.Text = ""
label.BackgroundTransparency = 1
label.TextColor3 = Color3.fromRGB(255, 255, 0)
label.Font = Enum.Font.SourceSansItalic
label.TextScaled = true
label.Parent = button

-- Clique no botão ativa o RemoteEvent
button.MouseButton1Click:Connect(function()
    local character = player.Character or player.CharacterAdded:Wait()
    local combat = character:WaitForChild("Combat")
    local remoteEvent = combat:WaitForChild("RemoteEvent")
    remoteEvent:FireServer()
end)
